# MCP Server Configuration

# Server port (default: 3700)
MCP_PORT=3700

# Data directory (relative to mcp-server/)
MCP_DATA_DIR=./data

# Log level (debug, info, warn, error)
MCP_LOG_LEVEL=info

# Cache TTL in seconds (default: 300 = 5 minutes)
MCP_CACHE_TTL=300

# Enable auto-restart on crash
MCP_AUTO_RESTART=true

# Enable file watching for re-indexing (development only)
MCP_WATCH_FILES=false

# Maximum memory usage in MB
MCP_MAX_MEMORY_MB=100
