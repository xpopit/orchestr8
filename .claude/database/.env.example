# Orchestr8 Intelligence Database Configuration
# Copy this file to .env and customize as needed

# Database Connection
POSTGRES_DB=orchestr8_intelligence
POSTGRES_USER=orchestr8
POSTGRES_PASSWORD=orchestr8_dev_password

# Port Configuration
# Use 5433 to avoid conflicts with existing PostgreSQL installations
POSTGRES_PORT=5433

# Connection String (for use in agents and workflows)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://orchestr8:orchestr8_dev_password@localhost:5433/orchestr8_intelligence

# OpenAI API Configuration (for embeddings)
# Required for semantic code search
OPENAI_API_KEY=your_openai_api_key_here

# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536

# Code Intelligence Settings
MAX_FILE_SIZE_MB=10
MAX_FUNCTION_LINES=500
INDEXING_BATCH_SIZE=100

# Cache Settings
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE_MB=500

# Performance Tuning
MAX_CONCURRENT_INDEXING=4
ENABLE_INCREMENTAL_INDEXING=true

# Logging
LOG_LEVEL=INFO
LOG_SQL_QUERIES=false
